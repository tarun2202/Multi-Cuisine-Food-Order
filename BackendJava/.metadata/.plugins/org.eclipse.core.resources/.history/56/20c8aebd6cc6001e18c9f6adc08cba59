package com.app.dao;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.app.entities.Customers;
import com.app.entities.Favourites;

@Repository
public interface FavouriteDao extends JpaRepository<Favourites, Long> {

	@Query("SELECT f FROM favourites f join fetch f.customer WHERE f.customer=:customer")
	List<Favourites> listAllFavByCustomer(Customers customer);

	List<Favourites> getByCustomerId(Long customerId);

}
